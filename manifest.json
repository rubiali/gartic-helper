{
  "manifest_version": 3,
  "name": "Word Game Assistant",
  "version": "1.0",
  "description": "Assistente para jogos de palavras com sugest√µes em tempo real",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Word Game Assistant"
  },
  "icons": {
    "128": "icon.png"
  }
}